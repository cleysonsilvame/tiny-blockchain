{
  // Use ESLint for auto-fixes (and Prettier via eslint-plugin-prettier)
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  // ESLint flat config is used (eslint.config.js)
  "eslint.useFlatConfig": true,
  // Validate these languages with ESLint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html"
  ]
}
